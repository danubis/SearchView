<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->
    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppThemeDayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- AppTheme -->
    <style name="AppThemeLight" parent="BaseAppThemeDayNight" />

    <style name="AppThemeDark" parent="BaseAppThemeDark" />

    <style name="AppThemeDayNight" parent="BaseAppThemeDayNight" />


    <style name="AppThemeDark2" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">#ff00acc1</item>
        <item name="colorPrimaryDark">#ff0097a7</item>
        <item name="colorAccent">#ffd81b60</item>

        <item name="colorControlNormal">#00acc1</item>
        <item name="colorControlHighlight">#ffd81b60</item>
        <item name="colorControlActivated">#ffd81b60</item>

        <item name="colorButtonNormal">#00acc1</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
